function [aznew, elnew, objrangenew] = worldflow(old, current_az, current_el, movement)

aznew = old(:,1) - current_az;
elnew = old(:,2) - current_el;

range = objrange*cos(elnew);

X = range*cos(aznew);
Y = objrange*sin(elnew);
Z = range*sin(aznew);

Znew = Z - movement;

ogjrangnew = sqrt(X.^2 + Y.^2 + Z);


end